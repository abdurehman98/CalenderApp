<%= turbo_frame_tag "modal" do%>
  <div data-controller="modal" data-action="turbo:submit-end->modal#updatetask">
    <div id="my-modal">

      <p style="color: green"><%= notice %></p>

      <%= render @task %>

      <div>
        <%= link_to "Edit this task", edit_task_path(@task), data:{ turbo_frame: "modal" } %> |
        <%= link_to "Back to tasks", tasks_path %>  

        <%= button_to "Destroy this task", @task, method: :delete %>
      </div>
    </div>
  </div>
<% end %>
